i=uppvidinge.se
DNS=`dig +norec +all ns  $i @8.8.8.8|grep ^$i| awk '{ print $5}'`
        for ns in $DNS ; do
                if [ "`host $ns | grep -i '[2-3][0-9|a-f][0-9|a-f][0-9|a-f]:'`" ] && [ "$dnscheck" = "0" ] ; then
                        if [ "`echo $ns | grep $i`" != "" ] ; then
                                if [ "`dig +norec $ns @a.ns.se|grep AAAA|grep $ns`" != "" ] ; then
                                        echo $i >> $dnsfile
                                        dnscheck=1
                                fi
                        fi
                        if [ "`echo $ns | grep $i`" = "" ] ; then
                                        echo $i >> $dnsfile
                                        dnscheck=1
                        fi
                fi
        done

